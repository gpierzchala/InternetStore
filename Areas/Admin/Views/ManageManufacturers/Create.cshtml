@model SklepInternetowy.Areas.Admin.Models.CreateManufacturerModel

@{
    ViewBag.Title = "Nowy producent";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@if (TempData["error"] != null)
{
    <div class="row">
        <div class="col-lg-12">
            <div class="alert alert-danger alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                @TempData["error"]
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-lg-12">
        <div class="pull-right" style="margin-bottom: 10px;">
            <a class="btn btn-default" href="@Url.Action("List")">Wróć do listy</a>
        </div>
    </div>
    <div class="col-lg-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-bar-chart-o"></i>
                    Nowy producent
                </h3>
            </div>
            <div class="panel-body">
                <div id="main" style="position: relative">

                    @{ Html.BeginForm(); }
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Nazwa nowego producenta</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control input" })
                        <font color="red"><strong> @Html.ValidationMessageFor(model => model.Name)</strong></font>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Dodaj" />
                    </div>
                    @{ Html.EndForm(); }
                </div>
            </div>
        </div>
    </div>
</div>