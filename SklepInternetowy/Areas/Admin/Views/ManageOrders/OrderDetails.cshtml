@model SklepInternetowy.Areas.Admin.Models.OrderModel

@{
    ViewBag.Title = "Szczegóły zamówienia";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-bar-chart-o"></i>
                Zamówienie nr @Model.OrderId
            </h3>
        </div>
        <div class="panel-body">
            <div id="table-responsive" style="position: relative">
                <table class="table table-bordered table-striped table-responsive">
                    <thead>
                        <tr>
                            <th>
                                Użytkownik
                            </th>
                            <th>
                                Data zamówienia                               
                            </th>
                            <th>
                                Sposób dostawy
                            </th>
                            <th>Koszt całkowity zamówienia</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Username</td>
                            <td>@Model.OrderDate</td>
                            <td>@Model.DeliveryType</td>
                            <td>@Model.SummaryPrice.ToString("c")</td>
                        </tr>
                    </tbody>
                </table>
                
                <br/>
                @if (Model.OrderDetails.Count > 0)
                {
                    <table class="table table-bordered table-striped table-responsive">
                        <thead>
                            <tr>
                                <th>Produkt</th>
                                <th>Ilość</th>
                                <th>Cena jednostkowa</th>
                                <th>Cena za produkt</th>
                            </tr>
                            
                        </thead>

                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice.ToString("c")</td>
                                    <td>@((item.Quantity*item.UnitPrice).ToString("c"))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    @: <p>Brak danych na temat szczegółów zamówienia</p>
                }
            </div>
        </div>
    </div>
</div>
