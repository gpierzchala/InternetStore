@model SklepInternetowy.Areas.Admin.Models.ConnectedProductsWithCategoryViewModel

@{
    ViewBag.Title = "Powiązane produkty z kategorią " + Model.CategoryName;
    Layout = "/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-9">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-bar-chart-o"></i>
                @ViewBag.Title
            </h3>
        </div>
        <div class="panel-body">
            <div id="table-responsive" style="position: relative">
                <table class="table table-bordered table-hover tablesorter text-center">
                    <thead>
                    <tr>
                        <th class="header" style="text-align: center">
                            Nazwa
                            <i class="fa fa-sort"></i>
                        </th>
                        <th class="header" style="text-align: center">
                            Bestseller
                        </th>
                        <th class="header" style="text-align: center">
                            Nowy
                        </th>
                        <th class="header" style="text-align: center">
                            Często kupowany
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.ProductData)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink(item.Name, "Details", new {id = item.Id}, new {title = "Szczegóły", @class = "tip-e"})
                            </td>
                            <td>
                                @if(item.IsBestseller)
                                {
                                <div class="btn btn-large btn-success">Tak</div>
                                }
                                else
                                {
                                <div class="btn btn-large btn-danger">Nie</div>
                                }
                            </td>
                            <td>
                                @if(item.IsFeatured)
                                {
                                <div class="btn btn-large btn-success">Tak</div>
                                }
                                else
                                {
                                <div class="btn btn-large btn-danger">Nie</div>
                                }
                            </td>
                            <td>
                                @if(item.IsRecent)
                                {
                                <div class="btn btn-large btn-success">Tak</div>
                                }
                                else
                                {
                                <div class="btn btn-large btn-danger">Nie</div>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>