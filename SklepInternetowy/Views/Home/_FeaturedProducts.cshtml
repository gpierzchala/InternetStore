@using PagedList
@using PagedList.Mvc
@model System.Collections.IEnumerable

<div class="well well-small">
    <h4>Najczęściej kupowane</h4>
    <div class="row-fluid">
        <div id="featuredProducts">
            @Html.Partial("_Featured", Model)
        </div>
        <div class="pagination pagination-centered">
            <ul>
                <li>
                    @Html.PagedListPager((IPagedList) Model, featuredPage =>
                        Url.Action("Featured", new {featuredPage}),
                                 PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing((new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "featuredProducts" })))
                            
                </li>
            </ul>
        </div>
    </div>
</div>