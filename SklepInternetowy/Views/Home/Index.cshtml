@using DataAccess.Entities
@model IEnumerable<Products>

@{
    ViewBag.Title = "Strona główna";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="mainBody">
    <div class="container">
        <div class="row">
            @Html.Partial("SideBar", ViewData["categories"])

            <div class="span9" style="float: left;">
                <div id="featuredProducts">
                    @Html.Partial("_FeaturedProducts", ViewData["featured"])
                </div>
            </div>
            
            <div class="span9" style="float: left;margin-left: 330px;">
                <div id="recentProducts">
                    @Html.Partial("_RecentProducts", ViewData["recent"])
                </div>
            </div>
        </div>
    </div>
</div>