@using PagedList
@using PagedList.Mvc
@model IEnumerable<DataAccess.Entities.Products>

<div class="well well-small">
    <h4>Najnowsze</h4>
    <div class="row-fluid">
        <div id="recentProducts">
            @Html.Partial("_Featured", Model)
        </div>
    </div>
    <div class="pagination pagination-centered">
        <ul>
            <li>
                    @Html.PagedListPager((IPagedList) Model, recentPage =>
                        Url.Action("Recent", new {recentPage}),
                        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
                            (new AjaxOptions {HttpMethod = "GET", UpdateTargetId = "recentProducts"})))
            </li>
        </ul>
                
    </div>
</div>