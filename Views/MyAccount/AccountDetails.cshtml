@model SklepInternetowy.Models.UserModel

@{
    ViewBag.Title = "Ustawienia użytkownika " + @Model.Name;
    Layout = "~/Views/Shared/_AccountDetails.cshtml";
}


<div class="row">
    <div class="col-lg-9">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <i class="fa fa-bar-chart-o"></i>
                    @ViewBag.Title
                </h3>
            </div>
            <div class="panel-body">
                <div id="main" style="position: relative">

                    @{Html.BeginForm();}
                    @Html.ValidationSummary(true)
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Imię</label>
                        @Html.TextBoxFor(x => x.Name, new { @class = "form-control input" })
                        <font color="Red">@Html.ValidationMessageFor(model => model.Name)</font>
                    </div>

                    <div class="form-group">
                        <label>Nazwisko</label>
                        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control input" })
                        @Html.ValidationMessageFor(model => model.Surname)
                    </div>
                    
                    <div class="form-group">
                        <label>Email</label>
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control input" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="form-group">
                        <label>Adres</label>
                        @Html.TextBoxFor(x => x.Address, new { @class = "form-control input" })
                        <font color="Red">@Html.ValidationMessageFor(model => model.Address)</font>
                    </div>

                    <div class="form-group">
                        <label>Miasto</label>
                        @Html.TextBoxFor(x => x.City, new { @class = "form-control input" })
                        <font color="Red">@Html.ValidationMessageFor(model => model.City)</font>
                    </div>
                    
                    <div class="form-group">
                        <label>Kod pocztowy</label>
                        @Html.TextBoxFor(x => x.ZipCode, new { @class = "form-control input" })
                        <font color="Red">@Html.ValidationMessageFor(model => model.ZipCode)</font>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="Zapisz" />
                    </div>
                    @{Html.EndForm();}
                </div>
            </div>
        </div>
    </div>
</div>
